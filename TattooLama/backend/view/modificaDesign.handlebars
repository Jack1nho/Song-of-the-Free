<div class="d-flex">
    <form action="/getTattooDesign/{{tattooimages.id}}?_method=POST" method="POST" class="list-inline mx-auto justify-content-center">
        <input type="hidden" name="_method" value="POST">
        
        <select class="selectpicker form-control" value="{{tattooimages.id_tattoer}}" data-style="btn-info" name="selectpicker">
            <option selected> Scegli un tatuatore</option> 
            {{#each tatuatori}}
            <option name="table1" value="{{id}}">{{name}} {{surname}}</option>        
            {{/each}}
        </select>    <br>  

        Nome Design:<br>
        <input type="text" name="design_name" class="form-control" value="{{tattooimages.name_design}}"><br>
        Artista Associato:<br>
        <input type="text" name="associated" class="form-control" value="{{tatuatoris.name}} {{tatuatoris.surname}}"><br>
        Prezzo:<br>
        <input type="number" name="price" class="form-control" value="{{tattooimages.price}}"><br>
        Stile:<br>
        <input type="text" name="style" class="form-control" value="{{tattooimages.style}}"><br>
        Altezza:<br>
        <input type="text" name="altezza" class="form-control" value="{{tattooimages.altezza}}"><br>
        Larghezza:<br>
        <input type="text" name="larghezza" class="form-control" value="{{tattooimages.larghezza}}"><br>
        Image:<br>
        <input type="text" name="image" class="form-control" value="{{tattooimages.image}}"><br>
        Meta Title:
        <input type="text" name="title" class="form-control" value="{{tattooimages.title}}"> <br>
        Meta Description:
        <textarea type="textarea" name="meta_title" class="form-control" value="{{tattooimages.meta_title}}"></textarea><br>
        Alt Tag:
        <input type="text" name="alt_tag" class="form-control" value="{{tattooimages.alt_tag}}"><br>
        
        <input type="submit" class="btn btn-primary" value="Submit">
    </form>
</div>